const router = require('express').Router();

const {
    getThoughts,
    getSingleThought,
    createThought,
    updateThought,
    deleteThought
} = require('../../controllers/thoughtController.js');

// /api/thoughts
router.route('/').get(getThoughts).post(createThought);

// /api/thoughts/:thoughtId

router
    .route('/:routerId')
    .get(getSingleThought)
    .get(updateThought)
    .get(deleteThought)

module.exports = router;